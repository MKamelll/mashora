<div class="max-w-2xl mx-auto p-4">
    <form class="grid grid-cols-1 md:grid-cols-2 gap-6 bg-base-200 p-6 rounded-lg shadow">
        <div>
            <label class="label">
                <span class="label-text">الاسم</span>
            </label>
            <input type="text" placeholder="الاسم ثلاثي علي الأقل" class="input input-bordered w-full" required/>
        </div>
        <div>
            <label class="label">
                <span class="label-text">الرقم القومي</span>
            </label>
            <input type="text" inputmode="numeric" pattern="[0-9]" class="input input-bordered w-full no-spinner" placeholder="تأكد من كتابة 14 رقم" required/>
        </div>
        <div>
            <label class="label">
                <span class="label-text">رقم الهاتف</span>
            </label>
            <input type="tel" class="input input-bordered w-full" placeholder="تأكد من كتابة 11 رقم"/>
        </div>
        <div>
            <label class="label">
                <span class="label-text">تاريخ الميلاد</span>
            </label>
            <input type="date" required class="input input-bordered w-full" />
        </div>
        <div>
            <label class="label">
                <span class="label-text"> مستوي تعليم الأم</span>
            </label>
            <select class="select select-bordered w-full">
                <option value="none">أمي</option>
                <option value="can-read">يجيد القراءة</option>
                <option value="moderate">مؤهل متوسط</option>
                <option value="above-moderate">فوق المتوسط</option>
                <option value="excellant">مؤهل عالي</option>
            </select>
        </div>
        <div>
            <label class="label">
                <span class="label-text">عدد الأطفال</span>
            </label>
            <input type="text" required inputmode="numeric" pattern="[0-9]" class="input input-bordered w-full no-spinner" />
        </div>
        <div>
            <label class="label">
                <span class="label-text">المدة بين اخر حملين</span>
            </label>
            <input type="text" inputmode="numeric" pattern="[0-9]" class="input input-bordered w-full no-spinner" placeholder="بالشهور"/>
        </div>
        <div class="md:col-span-2 text-right flex justify-end">
            <button class="btn btn-primary">متابعة</button>
        </div>
    </form>
</div>
  