<div class="max-w-2xl mx-auto p-4">
    <form class="grid grid-cols-1 md:grid-cols-2 gap-6 bg-base-200 p-6 rounded-lg shadow">
        <div>
            <label class="label">
                <span class="label-text">موعد الزيارة</span>
            </label>
            <select class="select select-bordered w-full">
                <option value="first-week">الاسبوع الأول</option>
                <option value="one-month-old">عمر شهر</option>
                <option value="two-month-old">عمر شهرين</option>
                <option value="three-month-old">عمر 3 شهور</option>
                <option value="four-month-old">عمر 4 شهور</option>
                <option value="six-month-old">عمر 6 شهور</option>
                <option value="nine-month-old">عمر 9 شهور</option>
                <option value="twelve-month-old">عمر 12 شهر</option>
                <option value="eighteen-month-old">عمر 18 شهر</option>
                <option value="two-year-old">عمر سنتين</option>
                <option value="three-year-old">عمر 3 سنوات</option>
            </select>
        </div>

        <div>
            <label class="label">
                <span class="label-text">تاريخ الزيارة</span>
            </label>
            <input type="date" class="input input-bordered w-full" />
        </div>
        
        <div class="border border-base-300 p-4 rounded-lg bg-base-100 shadow-sm mt-6">
            <h3 class="text-lg font-semibold mb-4 text-base-content">الموعد الحالي بشأن الرضاعة</h3>
            <div>
                <label class="label">
                    <span class="label-text">رضاعة طبيعية مطلقة</span>
                </label>
                <select class="select select-bordered w-full">
                    <option disabled selected value="">اختر</option>
                    <option value="three-months">3 شهور</option>
                    <option value="four-months">4 شهور</option>
                    <option value="six-months">6 شهور</option>
                </select>
            </div>
            <div>
                <label class="label">
                    <span class="label-text">رضاعة طبيعية مع سوائل وأعشاب</span>
                </label>
                <select class="select select-bordered w-full">
                    <option disabled selected value="">اختر</option>
                    <option value="yes">تم</option>
                    <option value="no">لم يتم</option>
                </select>
            </div>
            <div>
                <label class="label">
                    <span class="label-text">رضاعة طبيعية مع صناعي</span>
                </label>
                <select class="select select-bordered w-full">
                    <option disabled selected value="">اختر</option>
                    <option value="yes">تم</option>
                    <option value="no">لم يتم</option>
                </select>
            </div>
            <div>
                <label class="label">
                    <span class="label-text">رضاعة لبن صناعي</span>
                </label>
                <select class="select select-bordered w-full">
                    <option disabled selected value="">اختر</option>
                    <option value="yes">تم</option>
                    <option value="no">لم يتم</option>
                </select>
            </div>
        </div>

        <div>
            <div>
                <label class="label">
                    <span class="label-text">الوزن</span>
                </label>
                <input type="text" inputmode="numeric" pattern="[0-9]" class="input input-bordered w-full no-spinner" placeholder="بالكيلوجرام"/>
            </div>
            
            <div>
                <label class="label">
                    <span class="label-text">الطول</span>
                </label>
                <input type="text" inputmode="numeric" pattern="[0-9]" class="input input-bordered w-full no-spinner" placeholder="بالسنتيمتر"/>
            </div>
    
            <div>
                <label class="label">
                    <span class="label-text">محيط الرأس</span>
                </label>
                <input type="text" inputmode="numeric" pattern="[0-9]" class="input input-bordered w-full no-spinner" placeholder="بالسنتيمتر"/>
            </div>
        </div>

        <div class="md:col-span-2 text-right flex justify-end">
            <button class="btn btn-primary">متابعة</button>
        </div>
    </form>
</div>
  